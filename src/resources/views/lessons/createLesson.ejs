<%- include('../partials/header') %>
    <div class="container content">
        <h3>ĐĂNG BÀI HỌC</h3>
        <form method="POST" action="/lessons/save">
            <div class="form-group">
                <label for="name">Tên Bài Học</label>
                <input type="text" class="form-control" id="name" name="name">
            </div>

            <div class="form-group">
                <label for="videoID">VideoID</label>
                <input type="text" class="form-control" id="videoId" name="videoId">
            </div>


            <div class="form-group">
                <label for="tag">Tag</label>
                <select name="tag" id="tag" class="form-select">
                    <% tag.forEach(function(tag) { %>
                        <option>
                            <%= tag.tag %>
                        </option>
                        <% }) %>
                </select>
            </div>
            <button type="submit" class="btn btn-info">Thêm Bài Học</button>
        </form>
    </div>
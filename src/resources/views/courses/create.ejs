<%- include('../partials/header')%>
    <div class="container content">
        <h3>ĐĂNG KHÓA HỌC</h3>
        <form method="POST" action="/courses/save">
            <div class="form-group">
                <label for="name">Tên Khóa Học</label>
                <input type="text" class="form-control" id="name" name="name">
            </div>
            <div class="form-group">
                <label for="description">Mô Tả</label>
                <textarea type="text" class="form-control" id="description" name="description"></textarea>
            </div>
            <div class="form-group">
                <label for="videoID">VideoID</label>
                <input type="text" class="form-control" id="videoId" name="videoId">
            </div>
            <div class="form-group">
                <label for="level">Level</label>
                <input type="text" class="form-control" id="level" name="level">
            </div>
            <div class="form-group">
                <label for="tag">Tag</label>
                <input type="text" class="form-control" id="tag" name="tag">
            </div>
            <div class="form-group">
                <label for="type">Type</label>
                <select name="type" id="type" class="form-select">
                    <option selected>Open this select menu</option>
                    <option value="basic-knowledge">Basic Knowledge</option>
                    <option value="basic-programming">Basic Programming</option>
                    <option value="advanced-programming">Advanced Programming</option>
                </select>
            </div>
            <button type="submit" class="btn btn-info">Thêm Khóa Học</button>
        </form>
    </div>